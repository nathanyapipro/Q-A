{
  "name": "fundamental",
  "version": "1.0.0",
  "description": "Anonymous Q&A app",
  "main": "index.js",
  "author": "Nathan Yapi",
  "license": "ISC",
  "scripts": {
    "dev": "nodemon ./server/index.js",
    "build:client": "cd ./client && npm run build",
    "start": "node ./server/index.js",
    "prod": "npm run build:client && npm run start",
    "precommit": "pretty-quick --staged",
    "cz": "npm run precommit && git cz",
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "data/*",
      "client/*",
      "db/*"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "@graphile-contrib/pg-simplify-inflector": "^4.0.0-alpha.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "http": "0.0.0",
    "nodemon": "^1.18.9",
    "pg": "^7.7.1",
    "postgraphile": "^4.2.0",
    "postgraphile-plugin-connection-filter": "^1.0.0-beta.23"
  },
  "devDependencies": {
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0"
  }
}
